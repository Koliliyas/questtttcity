# Пример переменных окружения для production на Timeweb Cloud
# Скопируйте этот файл в .env.production и замените значения на реальные данные

# Настройки приложения
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=false
APP_SESSION_SECRET_KEY=your-super-secret-session-key-change-this

# CORS настройки
APP_ALLOW_ORIGINS=["https://questcity.yourdomain.com", "https://www.questcity.yourdomain.com"]
APP_ALLOW_ORIGIN_REGEX=https://.*\.questcity\.yourdomain\.com
APP_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
APP_ALLOW_HEADERS=["*"]

# Настройки базы данных PostgreSQL (Timeweb Cloud Database)
DATABASE_DRIVER=postgresql+asyncpg
DATABASE_USERNAME=questcity_user
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=your-database-host.timeweb.cloud
DATABASE_PORT=5432
DATABASE_NAME=questcity_db

# Настройки S3 хранилища (Timeweb Cloud Object Storage)
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_ENDPOINT=https://s3.timeweb.cloud
S3_BUCKET_NAME=questcity-storage
S3_BROWSER_URL=https://s3.timeweb.cloud/questcity-storage

# Настройки JWT
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Настройки почты
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=your-email@yourdomain.com
MAIL_PORT=587
MAIL_SERVER=smtp.yourdomain.com
MAIL_TLS=true
MAIL_SSL=false

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=json











